# ============================================================================
# TELEGRAM SCANNER CONFIGURATION
# ============================================================================
#
# Copy this file to .env and fill in your credentials
# DO NOT commit the .env file to git!

# ============================================================================
# TELEGRAM API CREDENTIALS
# Get from: https://my.telegram.org
# ============================================================================

TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+1234567890

# Telegram channels/groups to monitor (comma-separated)
# Can be usernames (@channel) or numeric IDs
TELEGRAM_CHATS=@cryptoalphacalls,@pumpfunsignals

# ============================================================================
# AI PROVIDER (Claude recommended)
# ============================================================================

AI_PROVIDER=anthropic
ANTHROPIC_API_KEY=your_anthropic_key_here

# Alternative: OpenAI (not yet implemented)
# OPENAI_API_KEY=your_openai_key_here

# ============================================================================
# TRADING SETTINGS
# ============================================================================

# IMPORTANT: Keep simulation mode enabled until fully tested
SIMULATION_MODE=true

# Default buy amounts
DEFAULT_BUY_AMOUNT_ETH=0.1
DEFAULT_BUY_AMOUNT_SOL=1.0

# ============================================================================
# ANALYSIS THRESHOLDS
# ============================================================================

# Minimum liquidity in USD
MIN_LIQUIDITY_USD=10000

# Maximum market cap in USD (for early entry)
MAX_MARKET_CAP_USD=1000000

# Maximum acceptable buy/sell taxes (percentage)
MAX_BUY_TAX_PERCENT=10
MAX_SELL_TAX_PERCENT=10

# Minimum number of holders
MIN_HOLDERS=50

# Maximum percentage held by single wallet
MAX_HOLDER_PERCENT=20

# Maximum token age in hours (for fresh launches)
MAX_TOKEN_AGE_HOURS=1.0

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# WebSocket port for sending alerts to terminal
WS_PORT=8766

# HTTP API port for status/control
HTTP_PORT=8765

# Database file path
DB_PATH=telegram-scanner/token_cache.db

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=INFO
