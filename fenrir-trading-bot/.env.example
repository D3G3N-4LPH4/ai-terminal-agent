# FENRIR Trading Bot Configuration
# Copy to .env and fill in your values

# ═══════════════════════════════════════════════════════════════════════════
#                         SERVER CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════

PORT=8000
HOST=0.0.0.0

# ═══════════════════════════════════════════════════════════════════════════
#                         SOLANA CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════

# Solana RPC endpoints
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# Wallet (for real trading only - KEEP SECRET!)
# WALLET_PRIVATE_KEY=your_base58_private_key_here

# ═══════════════════════════════════════════════════════════════════════════
#                         PHASE 1: PRICE FEEDS
# ═══════════════════════════════════════════════════════════════════════════

# Birdeye API (recommended for best prices)
BIRDEYE_API_KEY=

# DexScreener (free tier available)
# No API key needed for basic usage

# Jupiter (free)
# No API key needed

# ═══════════════════════════════════════════════════════════════════════════
#                         PHASE 2: SAFETY
# ═══════════════════════════════════════════════════════════════════════════

# Trade database path
DATABASE_PATH=fenrir_trades.db

# Jito MEV Protection
USE_JITO=false
JITO_REGION=mainnet
JITO_TIP_LAMPORTS=50000

# ═══════════════════════════════════════════════════════════════════════════
#                         PHASE 3: AI ANALYSIS
# ═══════════════════════════════════════════════════════════════════════════

# Enable AI-powered token analysis
AI_ANALYSIS_ENABLED=false

# OpenRouter API key (get from https://openrouter.ai)
OPENROUTER_API_KEY=

# AI Model selection
AI_MODEL=anthropic/claude-sonnet-4
AI_TEMPERATURE=0.3

# ═══════════════════════════════════════════════════════════════════════════
#                         TRADING PARAMETERS
# ═══════════════════════════════════════════════════════════════════════════

# Default trading mode (simulation or live)
TRADING_MODE=simulation

# Position sizing
DEFAULT_BUY_AMOUNT_SOL=0.1
MAX_POSITIONS=3

# Risk management
STOP_LOSS_PCT=25
TAKE_PROFIT_PCT=100
TRAILING_STOP_PCT=15
MAX_POSITION_AGE_MINUTES=60

# Token filters
MIN_LIQUIDITY_SOL=5.0
MAX_MARKET_CAP_SOL=100.0
MIN_HOLDERS=10
MAX_TOKEN_AGE_SECONDS=300
